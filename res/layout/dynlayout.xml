<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/citytextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="City" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="state,country" />

    <ImageView
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxHeight="40sp"
        android:maxWidth="40sp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="Text" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="Temp" />

    <TableLayout
        android:layout_width="match_parent"
        android:id="@+id/forecasttable"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:textColor="#FFFFFF"
        android:layout_height="130sp"
        android:layout_gravity="center"
     	android:background="#000000">
	
        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            
            <TextView android:id="@+id/day0"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/grey"
       				android:layout_margin="0.5sp"
       				android:text="Day"/>
       			
            <TextView android:id="@+id/weather0"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:textColor="#FFFFFF"
       				android:gravity="center"
       				android:paddingLeft="10sp"
       				 android:textStyle="bold"
       				android:paddingRight="10sp"
       				android:background="@drawable/grey"
       				android:layout_margin="0.5sp"
       				android:text="Mostly Cloudy"/>
       			
    		<TextView android:id="@+id/high0"
       				android:singleLine="false"
       			    android:textSize="15sp"
       			    android:layout_width="0dip"
       				android:layout_weight="1"
       				 android:textStyle="bold"
                    android:textColor="#FFFFFF"	
                    android:background="@drawable/grey"
                    android:gravity="center"
                    android:text="High"
       				android:layout_margin="0.5sp"/>
    		<TextView android:id="@+id/low0"
       				android:singleLine="false"
       				android:layout_width="0dip"
       				 android:textStyle="bold"
       				android:layout_weight="1"
       				android:textSize="15sp"
       				android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/grey"
       				android:layout_margin="0.5sp"
       				android:text="Low"/>
       				
    	</TableRow>
        
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
         
            <TextView android:id="@+id/day1"
       				android:singleLine="false"
       				android:layout_width="0dip"
       				android:layout_weight="1"
       				android:textSize="15sp"
       				android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"/>
                    
            <TextView android:id="@+id/weather1"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:gravity="center"
       				android:paddingLeft="10sp"
       				android:paddingRight="10sp"
       				android:textColor="#000000"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"/>
                   
    		<TextView android:id="@+id/high1"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				 android:textColor="#FF6600"
       				android:layout_weight="1"
       				android:gravity="center"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"/>
        			
    		<TextView android:id="@+id/low1"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:layout_weight="1"
       			    android:gravity="center"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"
        			android:textColor="#0033CC"/>
        			
    	</TableRow>
    	
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
          
            <TextView android:id="@+id/day2"
       				 android:singleLine="false"
       				 android:textSize="15sp"
       				 android:layout_width="0dip"
       				 android:layout_weight="1"
                     android:textColor="#000000"
                     android:gravity="center"
                     android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"/>
                   
            <TextView android:id="@+id/weather2"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:paddingLeft="10sp"
       				android:paddingRight="10sp"
       				android:textColor="#000000"
       				android:gravity="center"
       				android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"/>
        			
    		<TextView android:id="@+id/high2"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				 android:textColor="#FF6600"
       				android:gravity="center"
       				android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"
       				android:layout_weight="1"/>
        			
    		<TextView android:id="@+id/low2"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:gravity="center"
       				android:layout_weight="1"
       				android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"
        			android:textColor="#0033CC"/>
        			
    	</TableRow>
    	
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
         
            <TextView android:id="@+id/day3"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:gravity="center"
       				android:layout_weight="1"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"
        			android:textColor="#000000"/>
        			
            <TextView android:id="@+id/weather3"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:paddingLeft="10sp"
       				android:paddingRight="10sp"
       				android:textColor="#000000"
       				android:gravity="center"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"/>
        			
    		<TextView android:id="@+id/high3"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				 android:textColor="#FF6600"
       				android:gravity="center"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"
       				android:layout_weight="1"/>
        		
        		
    		<TextView android:id="@+id/low3"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:gravity="center"
       				android:layout_weight="1"
        			android:textColor="#0033CC"
        			android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"/>
        		
    	</TableRow>
    	
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
          
            <TextView android:id="@+id/day4"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:gravity="center"
       				android:layout_weight="1"
       				android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"
        			android:textColor="#000000"/>
        		
            <TextView android:id="@+id/weather4"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:paddingLeft="10sp"
       				android:paddingRight="10sp"
       				android:textColor="#000000"
       				android:gravity="center"
       				android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"/>
        		
    		<TextView android:id="@+id/high4"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				 android:textColor="#FF6600"
       				android:gravity="center"
       				android:layout_weight="1"
       				android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"/>
        		
        		
    		<TextView android:id="@+id/low4"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:gravity="center"
       				android:layout_weight="1"
        			android:textColor="#0033CC"
        			android:background="@drawable/blueback"
       				android:layout_margin="0.5sp"/>
        			
    	</TableRow>
    	
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
          
            <TextView android:id="@+id/day5"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:layout_weight="1"
       				android:gravity="center"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"
       				android:textColor="#000000"
       					android:text="END"/>
                  
            <TextView android:id="@+id/weather5"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:paddingLeft="10sp"
       				android:paddingRight="10sp"
       				android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"
       				android:gravity="center"
       				android:textColor="#000000"
       					android:text="END"/>
        			
    		<TextView android:id="@+id/high5"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				 android:textColor="#FF6600"
       				android:gravity="center"
       				android:layout_weight="1"
          			android:background="@drawable/whiteback"
          			android:layout_margin="0.5sp"
          				android:text="END"/>
          			
    		<TextView android:id="@+id/low5"
       				android:singleLine="false"
       				android:textSize="15sp"
       				android:layout_width="0dip"
       				android:gravity="center"
       				android:layout_weight="1"
         			android:textColor="#0033CC"
         			android:background="@drawable/whiteback"
       				android:layout_margin="0.5sp"
         			android:text="END"/>
         			
    	</TableRow>
        
    </TableLayout>

    <TextView
        android:id="@+id/textcurr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textfore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

</LinearLayout>